<!DOCTYPE html>

<html lang="en">
<body>
 <div class ="container">
  <div class ="hero-unit">
  <%- model_class = Faq -%>
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table>
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:body) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
 <tbody>
<% @faqs.each do |faq| %>
  <tr>
    <td><%= faq.title %></td>
    <td><%= faq.body %></td>
    <td><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_faq_path(event), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), faq_path(event), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_faq_path, :class => 'btn btn-primary' %>
</div>
</div>
</body>
</html>